<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartSpalanie.MainPage">

    <StackLayout BackgroundColor="#344966" Padding="20">
        <Label Margin="30" TextColor="#F0F4EF" Text="Logowanie" HorizontalTextAlignment="Center" FontSize="Title" />
        <Label TextColor="#F0F4EF" Text="Mail" HorizontalTextAlignment="Left" FontSize="18" />
        <Entry TextColor="#F0F4EF" x:Name="mail" Keyboard="Email"  />
        <Label TextColor="#F0F4EF" Text="Hasło" HorizontalTextAlignment="Left" FontSize="18" />
        <Entry TextColor="#F0F4EF" x:Name="password" IsPassword="true" />
        <Button Margin="0, 20, 0, 0" Clicked="Btn_login" CornerRadius="25" BackgroundColor="#F0F4EF" FontSize="17" TextColor="#344966" Text="Zaloguj" />
        <Label TextColor="Red" HorizontalTextAlignment="Center" x:Name="error" />
        <Label Margin="0, 30, 0, 10" FontSize="17" TextColor="#F0F4EF" Text="Jeżeli nie masz jeszcze konta:" />
        <Button Clicked="Btn_register" BackgroundColor="#F0F4EF" CornerRadius="25" FontSize="17" TextColor="#344966" Text="Rejestracja" />
    </StackLayout>

</ContentPage>
